<% if current_user.likes.find_by(idea_id: idea.id) %>
    <%= link_to 'お気に入りを取り消す', unlike_path(idea.id),
                class: 'btn btn-danger btn-sm like_it',
                method: :delete,
                remote: true %>
<% else %>
    <%= link_to 'お気に入り', like_path(idea.id),
                class: 'btn btn-warning btn-sm',
                method: :post,
                remote: true %>
<% end %>

