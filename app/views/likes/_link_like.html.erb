<% if current_user.likes.find_by(idea_id: idea.id) %>
    <%= link_to '', unlike_path(idea.id),
                class: 'btn like_it',
                method: :delete,
                remote: true %>
<% else %>
    <%= link_to '', like_path(idea.id),
                class: 'btn btn-warning btn-sm like',
                method: :post,
                remote: true %>
<% end %>

