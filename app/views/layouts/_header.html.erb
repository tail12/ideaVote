<header>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-inner">
        <div class="navbar-header">
          <h1 class="logo">
            <%= link_to "IdeaVotes", root_path, class: "navbar-brand" %>
          </h1>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% unless logged_in? %>
                <li><%= link_to "新規登録", signup_path %></li>
            <% else %>
                <li>
                  <%= link_to new_idea_path do %>
                    <span class="glyphicon glyphicon-plus" aria-hidden="true">
                      アイデアを投稿する
                    </span>
                  <% end %>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <%= gravatar_for current_user, size: 20 %>
                    <%= current_user.name %>
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to "プロフィール", current_user %>
                    </li>
                    <li>
                      <%= link_to "設定", edit_user_path(current_user.id) %>
                    </li>
                    <li role="separator" class="divider"></li>
                    <li>
                      <%= link_to "ログアウト", logout_path, method: :delete %>
                    </li>
                  </ul>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
