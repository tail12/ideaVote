<div class="box">
  <h2 class="box-title">会員登録</h2>
  <div class="box-inner">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control", placeholder: "お名前" %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（確認）" %>
        </div>
        <div class="form-group">
          <%= f.label :avatar, "プロフィール画像" %>
          <%= f.file_field :avatar %>
        </div>
        <div class="submit-group">
          <%= f.submit "登録する", class: "btn btn-success" %>
        </div>
    <% end %>
    既に登録している方はこちら！<%= link_to "ログイン画面へ", login_path %>
  </div>
</div>
