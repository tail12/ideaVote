<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", @user %></span>
      <span><b>アイデア投稿数</b>(<%= @user.ideas.count %>)</span>
    </section>
    <section class="stats">
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @ideas.any? %>
        <ul class="users follow">
          <%= render 'ideas/ideas', ideas: @ideas %>
        </ul>
    <% end %>
  </div>
</div>
